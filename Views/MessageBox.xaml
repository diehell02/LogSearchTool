<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LogSearchTool.Views.MessageBox" SizeToContent="WidthAndHeight" CanResize="False" 
        MinWidth="200" MinHeight="100"
        MaxWidth="400" MaxHeight="200"
        WindowStartupLocation="CenterScreen">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock HorizontalAlignment="Center" Name="Text" FontSize="16" Margin="5"/>
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons">
      <StackPanel.Styles>
        <Style Selector="Button">
          <Setter Property="Margin" Value="5"/>
        </Style>
      </StackPanel.Styles>

    </StackPanel>
  </StackPanel>
</Window>